<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <com.lvsiqianlib_banner.Banner
       android:id="@+id/banner"
       android:layout_width="0dp"
       android:layout_height="200dp"
       android:layout_marginBottom="531dp"
       app:bannerIndicatorEndMargin="13dp"
       app:bannerIndicatorMargin="3dp"
       app:bannerIndicatorRadio="5dp"
       app:bannerIndicatorSelectColor="@color/red"
       app:bannerIndicatorUnSelectColor="@color/white"
       app:bannerMarginTitleStart="13dp"
       app:bannerPagerScrollMode="horizontal"
       app:bannerPagerScrollTime="1000"
       app:bannerPagerSwichInterval="3000"
       app:bannerTitleMarginBottom="-50dp"
       app:bannerTitleMarginTop="12dp"
       app:bannerTitleTextColor="@color/white"
       app:bannerTitleTextSize="14dp"
       app:bannerTitleMarquee="false"

       app:layout_constraintEnd_toEndOf="parent"


       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />


   <com.lvsiqian.mvplib.widgets.BottomNavigation

       android:id="@+id/bottomNavigation"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       app:bottomNavigationTextColor="@color/bottom_navigation_text_color"
       app:bottomNavigationTextSize="10dp"
       app:bottomNavigationLeftMargin="27dp"
       app:bottomNavigationRightMargin="27dp"
       app:bottomNavigationTopMargin="6dp"
       app:bottomNavigationBottomMargin="6dp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:bottomNavigationDeliverLine="true"
       app:bottomNavigationDeliverLineWidth="1dp"
       app:bottomNavigationDeliverLineColor="@color/gray"
       />

</androidx.constraintlayout.widget.ConstraintLayout>
